//- Modal template
script(type='text/ng-template' id="detailsModal.html")
  .ng-cloak
  .modal-header
    .modal-title.ng-cloak.
      {{beachName}}
  .modal-body
    .row
      .col-md-6
        .center
          span.glyphicon.glyphicon-star(ng-repeat="star in toRepeat(solidRating)")
          span.glyphicon.glyphicon-star-empty(ng-repeat="star in toRepeat(remainingStars(solidRating))")
        .center
          strong.
            Solid Rating
          .center.ng-cloak.
            {{solidRating}}
      .col-md-6
        .center
          span.glyphicon.glyphicon-star(ng-repeat="star in toRepeat(fadedRating)")
          span.glyphicon.glyphicon-star-empty(ng-repeat="star in toRepeat(remainingStars(fadedRating))")
        .center
          strong.
            Faded Rating
          .center.ng-cloak.
            {{fadedRating}}
    .row
      .col-md-3
        .circle.center
          include anim/swellHeight
        .center
          strong.
            Swell Height
          .center.ng-cloak.
            {{swellHeight}}
      .col-md-3
        .circle.center
          include anim/swellPeriod
        .center
          strong.
            Swell Period
          .center.ng-cloak.
            {{swellPeriod}}
      .col-md-3
        .circle.center
          include anim/windSpeed
        .center
          strong.
            Wind Speed
          .center.ng-cloak.
            {{windSpeed}}
      .col-md-3
        .circle.center
          include anim/windDirection
        .center
          strong.
            Wind Direction
          .center.ng-cloak.
            {{windDirection}}
  .modal-footer
    button(btn btn-warning ng-click="cancel()").
      Cancel
