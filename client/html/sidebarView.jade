#site-menu-content
  span(class="glyphicon glyphicon-remove" ng-click="closeSidebar()")
  h1 {{ selectedBeach.beachname }}
  h3 {{ forecastTime }}
  button(ng-click="closeSidebar()" ui-sref="default").
    Reset Sidebar
  h3 Update forecast time:  
    rzslider(rz-slider-model="timeIndex" class="time-slider" rz-slider-ceil="7")
  .center
    span.glyphicon.glyphicon-star.solid-star(ng-repeat="star in toRepeat(solidRating)")
    span.glyphicon.glyphicon-star.faded-star(ng-repeat="star in toRepeat(fadedRating)")
    span.glyphicon.glyphicon-star-empty(ng-repeat="star in toRepeat(remainingStars())") 
  .center
    strong.
      Solid Rating
    .center.
      {{solidRating}}
    strong.
      Faded Rating
    .center.
      {{fadedRating}}
